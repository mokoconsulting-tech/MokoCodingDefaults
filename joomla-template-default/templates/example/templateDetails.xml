<!-- FILE INFORMATION
	DEFGROUP:	Joomla.Site
	INGROUP:  Joomla Template Default
	FILE:     templateDetails.xml
	VERSION   1.0.0
	BRIEF:    Joomla 5 template descriptor with en-GB and en-US language support and update server
	PATH:     ./templates/example/templateDetails.xml
	REPO:     https://github.com/mokoconsulting-tech/MokoCodingDefaults
	NOTE:     Generated on 2025-08-17
-->

<extension version="5.0" type="template" client="site" method="upgrade">
	<updateservers>
		<server type="extension" name="Moko Consulting">
			https://raw.githubusercontent.com/mokoconsulting-tech/MokoUpdates/refs/heads/main/joomla-default/updates.xml
		</server>
	</updateservers>
	<name>tpl_example</name>
	<version>1.0.0</version>
	<creationDate>2025-08-17</creationDate>
	<author>Jonathan Miller || Moko Consulting</author>
	<authorEmail>hello@mokoconsulting.tech</authorEmail>
	<authorUrl>https://mokoconsulting.tech</authorUrl>
	<copyright>(C) 2025 Moko Consulting</copyright>
	<license>GPL-3.0-or-later</license>
	<description>Baseline Joomla 5 site template skeleton with en-GB and en-US support.</description>

	<inheritable>1</inheritable>

	<files>
		<filename>index.php</filename>
		<filename>component.php</filename>
		<filename>custom.php</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>joomla.asset.json</filename>
	</files>

	<media destination="templates/site/example" folder="../media/templates/site/example">
		<folder>css</folder>
		<folder>js</folder>
		<folder>images</folder>
	</media>

	<positions>
		<position>debug</position>
		<position>position-1</position>
		<position>position-2</position>
	</positions>

	<languages>
		<language tag="en-GB">../language/en-GB/en-GB.tpl_example.ini</language>
		<language tag="en-GB">../language/en-GB/en-GB.tpl_example.sys.ini</language>
		<language tag="en-US">../language/en-US/en-US.tpl_example.ini</language>
		<language tag="en-US">../language/en-US/en-US.tpl_example.sys.ini</language>
	</languages>

</extension>
