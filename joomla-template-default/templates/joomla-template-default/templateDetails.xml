<extension version="5.0" type="template" client="site" method="upgrade">
  <name>tpl_joomla-template-default</name>
  <version>1.0.0</version>
  <creationDate>2025-08-17</creationDate>
  <author>Jonathan Miller || Moko Consulting</author>
  <authorEmail>hello@mokoconsulting.tech</authorEmail>
  <authorUrl>https://mokoconsulting.tech</authorUrl>
  <copyright>(C) 2025 Jonathan Miller || Moko Consulting</copyright>
  <license>GPL-3.0-or-later</license>
  <description>Baseline Joomla 5 site template skeleton with en-GB and en-US support.</description>

  <files>
    <filename>index.php</filename>
    <filename>component.php</filename>
    <filename>custom.php</filename>
    <filename>error.php</filename>
    <filename>offline.php</filename>
    <filename>templateDetails.xml</filename>
    <filename>joomla.asset.json</filename>
  </files>

  <media destination="templates/site/joomla-template-default" folder="../media/templates/site/joomla-template-default">
    <folder>css</folder>
    <folder>js</folder>
    <folder>images</folder>
  </media>

  <positions>
    <position>debug</position>
    <position>position-1</position>
    <position>position-2</position>
  </positions>

  <languages>
    <language tag="en-GB">../language/en-GB/en-GB.tpl_joomla-template-default.ini</language>
    <language tag="en-GB">../language/en-GB/en-GB.tpl_joomla-template-default.sys.ini</language>
    <language tag="en-US">../language/en-US/en-US.tpl_joomla-template-default.ini</language>
    <language tag="en-US">../language/en-US/en-US.tpl_joomla-template-default.sys.ini</language>
  </languages>

  <updateservers>
    <server type="extension" name="Moko Consulting">
      https://raw.githubusercontent.com/mokoconsulting-tech/MokoUpdates/refs/heads/main/joomla-default/updates.xml
    </server>
  </updateservers>
</extension>